extends layout
block content
    a(href="/things") Back to list
    if invalid
      div.alert.alert-danger Unable to save thing in database.

    form.form(method="POST")
        div.form-group
            label(for="thing_name") Name
            input.form-control#thing_name(name="name")
            label(for="thing_active") Active
            input.form-control#thing_active(type='checkbox', name='active',   checked=active)

        div
            button.btn.btn-primary(type="submit")
                | Save
        
                
